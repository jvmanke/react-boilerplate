{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A react boilerplate",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist-server/server.js",
    "test": "jest",
    "tdd": "jest -- --watch",
    "dev": "node devServer.js",
    "build": "webpack --mode production",
    "build:server": "webpack --mode production --config config/webpack/webpack.config.server.js",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint src *.js",
    "lint:stylelint": "stylelint src/**/*.js",
    "component": "bash ./scripts/react-component.sh src/components",
    "view": "bash ./scripts/router-view.sh src/views",
    "reducer": "bash ./scripts/redux-reducer.sh src/modules"
  },
  "keywords": [
    "React",
    "Config"
  ],
  "author": "Jo√£o Victor Manke",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.4",
    "express-static-gzip": "^1.1.3",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-lazyload": "^2.5.0",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.4.0",
    "redux": "^4.0.1",
    "redux-define": "^1.1.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "wretch": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.5.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "compression-webpack-plugin": "^2.0.0",
    "connect-history-api-fallback": "^1.6.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
